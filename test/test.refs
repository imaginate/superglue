################################################################################

################################################################################
## DEFINE PATHS
################################################################################

declare -r BIN='/bin'
declare -r LIB='/usr/lib/superglue'
declare -r HELP='/usr/share/superglue/help'
declare -r DUMMY="$(pwd -P)/dummy.sgl.d"
declare -r DUMTMP="${DUMMY}/tmp"
declare -r DUMTMP1="${DUMMY}/tmp1"
declare -r DUMTMP2="${DUMMY}/tmp2"
declare -r DUMTMP3="${DUMMY}/tmp3"

declare -ar DUMDIRS=( \
  "${DUMMY}"   \
  "${DUMTMP}"  \
  "${DUMTMP1}" \
  "${DUMTMP2}" \
  "${DUMTMP3}" \
)

################################################################################
## DEFINE TITLES
################################################################################

declare -r HEAD='START SUPERGLUE TESTS'
declare -r FOOT='END SUPERGLUE TESTS'

################################################################################
## DEFINE LENGTHS
################################################################################

declare -ir ROWLENGTH=36
declare -ir SECTIONWIDTH=-14

################################################################################
## DEFINE COLORS
################################################################################

declare -r UNCOLOR="$(printf '%b' '\033[0;0m')"
declare -r RED="$(printf '%b' '\033[0;91m')"
declare -r GREEN="$(printf '%b' '\033[0;32m')"

################################################################################
## DEFINE ERROR REFS
################################################################################

declare -ax ERRORS
declare -ix FAILED=0

################################################################################
## DEFINE SGL CMD LIST
################################################################################

declare -ar SGLCMDS=( \
  sgl       \
  sglue     \
  superglue \
)

################################################################################
## DEFINE SGL FUNC LIST
################################################################################

declare -ar SGLFUNCS=( \
  sgl_chk_cmd    \
  sgl_chk_dir    \
  sgl_chk_exit   \
  sgl_chk_file   \
  sgl_chk_uid    \
  sgl_color      \
  sgl_cp         \
  sgl_err        \
  sgl_mk_dest    \
  sgl_parse_args \
  sgl_print      \
  sgl_rm_dest    \
  sgl_set_color  \
  sgl_source     \
)
