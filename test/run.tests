#!/bin/bash
#
# Run `superglue' unit tests.
#
# @author Adam Smith <adam@imaginate.life> (http://imaginate.life)
# @copyright 2017 Adam A Smith <adam@imaginate.life> (http://imaginate.life)
#
# @use ./run.tests [...SECTION]
# @val SECTION  Must be a `./SECTION.test' file. If undefined all tests are ran.
# @exit
#   0  PASS  All tests passed.
#   1  FAIL  One or more tests failed.
################################################################################

################################################################################
## CHANGE DIRECTORY
################################################################################

if [[ ! "${0}" =~ ^(\./)?run\.tests$ ]]; then
  cd "${0%/*}"
fi

################################################################################
## LOAD REFS & HELPERS
################################################################################

source ./test.refs
source ./echo.helpers
source ./test.helpers

################################################################################
## MAKE DUMMY DIRECTORIES
################################################################################

for DUMDIR in "${DUMDIRS[@]}"; do
  if [[ ! -d "${DUMDIR}" ]]; then
    mkdir -p 0755 -- "${DUMDIR}"
  fi
done

################################################################################
## RUN TESTS
################################################################################

echo_header

if [[ ${#} -gt 0 ]]; then
  run_tests "${@}"
else
  run_tests ./*.test
fi

echo_final
echo_footer

################################################################################
## REMOVE DUMMY DIRECTORIES
################################################################################

if [[ -d "${DUMMY}" ]]; then
  rm -r -f -- "${DUMMY}"
fi

exit 0

